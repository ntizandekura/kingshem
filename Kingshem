  <script>
    const PASSWORD = "Kigali@2025";
    const productList = document.getElementById('productList');
    const adminPanel = document.getElementById('adminPanel');

    let products = JSON.parse(localStorage.getItem('kingshem_products') || '[]');
    if (products.length === 0) {
      products = [
        {name: "Gasabo Classic Shirt", desc: "Fine canvas blend with subtle embroidery.", price: "70,000 RWF", img: ""}
      ];
    }

    function renderProducts() {
      productList.innerHTML = "";
      products.forEach((p, i) => {
        const div = document.createElement('div');
        div.className = 'product';
        div.innerHTML = `
          <img src="${p.img || 'https://via.placeholder.com/600x400?text=Product+Image'}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>${p.desc}</p>
          <p><strong>Price:</strong> ${p.price}</p>
          <a href="https://wa.me/250782215422?text=I'm interested in the ${p.name}" target="_blank">
            <button>Order via WhatsApp</button>
          </a>
          <div class="admin">
            <button onclick="editProduct(${i})">Edit</button>
            <button onclick="deleteProduct(${i})">Delete</button>
          </div>
        `;
        productList.appendChild(div);
      });
    }

    function saveProducts() {
      localStorage.setItem('kingshem_products', JSON.stringify(products));
    }

    function addProduct() {
      const name = prompt("Product name:");
      if (!name) return;
      const desc = prompt("Short description:");
      const price = prompt("Price:");
      const img = prompt("Image URL (optional):");
      products.push({name, desc, price, img});
      saveProducts();
      renderProducts();
      alert("Product added!");
    }

    function editProduct(i) {
      const p = products[i];
      p.name = prompt("Edit name:", p.name) || p.name;
      p.desc = prompt("Edit description:", p.desc) || p.desc;
      p.price = prompt("Edit price:", p.price) || p.price;
      p.img = prompt("Edit image URL:", p.img) || p.img;
      saveProducts();
      renderProducts();
      alert("Product updated!");
    }

    function deleteProduct(i) {
      if (confirm("Delete this product?")) {
        products.splice(i, 1);
        saveProducts();
        renderProducts();
      }
    }

    function login() {
      const pass = prompt("Enter admin password:");
      if (pass === PASSWORD) {
        document.querySelectorAll('.admin').forEach(e => e.style.display = 'block');
        alert("Admin mode activated");
      } else {
        alert("Incorrect password.");
      }
    }

    function exportData() {
      const blob = new Blob([JSON.stringify(products, null, 2)], {type: 'application/json'});
      const a = document.createElement('a');
      a.href = URL.createObjectURL(blob);
      a.download = 'kingshem_data.json';
      a.click();
    }

    function importData(e) {
      const file = e.target.files[0];
      const reader = new FileReader();
      reader.onload = function(evt) {
        try {
          products = JSON.parse(evt.target.result);
          saveProducts();
          renderProducts();
          alert("Data imported successfully!");
        } catch (err) {
          alert("Import failed: invalid file.");
        }
      };
      reader.readAsText(file);
    }

    renderProducts();
  </script>
